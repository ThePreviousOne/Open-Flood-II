<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_box"
    app:columnCount= "4"
    app:rowCount="7" >

    <ImageView
        android:id="@+id/highScoreMedalImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_rowSpan="2" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:layout_column="2"
        app:layout_row="0"
        app:layout_columnSpan="2" >

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/replayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/endgame_replay"
            android:textSize="@dimen/small_text_size" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/newGameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/endgame_new_game_button"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/endGameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        app:layout_column="1"
        app:layout_row="1"
        app:layout_columnSpan="3"
        app:layout_rowSpan="2" />

    <TextView
        android:id="@+id/highScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        app:layout_column="0"
        app:layout_row="4"
        app:layout_columnSpan="3"
        app:layout_rowSpan="2" />

    <TextView
        android:textAppearance="@style/TextAppearance.FontPath.Pierce"
        android:id="@+id/seedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        app:layout_column="0"
        app:layout_row="6"
        app:layout_columnSpan="3"/>

</android.support.v7.widget.GridLayout>
