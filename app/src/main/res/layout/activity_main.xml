<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout">

    <FrameLayout
        android:id="@+id/outline"
        android:orientation="vertical"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_above="@+id/space"
        android:layout_centerHorizontal="true">

        <io.thepreviousone.openfloodii.views.SVGImageViewS
            android:id="@+id/regularPlayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true" />

    </FrameLayout>

    <View
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_centerInParent="true" />

    <io.thepreviousone.openfloodii.views.SVGImageViewS
        android:id="@+id/endlessPlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <com.github.megatronking.svg.support.extend.SVGImageView
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <com.github.megatronking.svg.support.extend.SVGImageView
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/infoButton" />

</RelativeLayout>