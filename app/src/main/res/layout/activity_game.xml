<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:keepScreenOn="true"
    android:padding="@dimen/outer_layout_padding"
    android:layout_marginTop="5sp">

    <com.github.megatronking.svg.support.extend.SVGImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/backButton"/>

    <TextView
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:gravity="end"
        android:text="@string/app_name"
        android:id="@+id/appNameTextView"
        android:textSize="@dimen/large_text_size"
        android:layout_alignParentRight="true" />

    <View
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/appNameTextView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/header"  />

    <TextView
        android:id="@+id/stepsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/outer_layout_padding"
        android:textSize="@dimen/large_text_size"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header" />

    <com.github.megatronking.svg.support.extend.SVGImageView
        android:id="@+id/newGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/outer_layout_padding"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/header" />

    <com.github.megatronking.svg.support.extend.SVGImageView
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="centerCrop"
        android:layout_toStartOf="@id/newGameButton"
        android:layout_below="@+id/header" />

    <com.github.megatronking.svg.support.extend.SVGImageView
        android:id="@+id/undoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="centerCrop"
        android:layout_toStartOf="@id/restartButton"
        android:layout_below="@+id/header" />

    <io.thepreviousone.openfloodii.views.FloodView
        android:id="@+id/floodView"
        android:layout_width="wrap_content"
        android:layout_height="373sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/undoButton" />

    <View
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="1sp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/floodView"/>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="@dimen/outer_layout_padding"
        android:orientation="horizontal"
        android:layout_below="@id/separator"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>